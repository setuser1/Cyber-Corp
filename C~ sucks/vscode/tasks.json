{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build and Run C~",
      "type": "shell",
      "command": "python",
      "args": [
        "${workspaceFolder}/.vscode/wrapper.py",
        "${file}"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    }
  ]
}
